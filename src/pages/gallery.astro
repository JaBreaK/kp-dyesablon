---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Heading from "~/components/Heading.astro";
import { Picture } from "astro:assets";

const BASE_URL = 'https://dmclzichnixtuoaujrqr.supabase.co/storage/v1/object/public/images/galery/';
---

<Layout
	pageTitle="Gallery - Grafika Printing Gemilang"
	description="Percetakan Kertas Profesional"
	>
  <Section class:list={"bg-gradient-to-b from-brand-green/10 to-white"}>
    <Heading>
      <h1 slot="heading-title" class="font-black text-brand-green h2">Gallery</h1>
      <p slot="heading-content" class="text-gray-700">
        Galeri kami adalah tempat di mana Anda dapat menemukan berbagai produk dan layanan yang kami tawarkan.
      </p>
    </Heading>
  </Section>

  <section class="px-4 sm:px-6 lg:px-8 pb-16 lg:pb-32">
    <div class="columns-1 sm:columns-2 lg:columns-3 gap-4 space-y-4">
      {Array.from({ length: 6 }).map((_, index) => {
        const fileName = `galery ${index + 1}.png`;
        const src = `${BASE_URL}${encodeURIComponent(fileName)}`;
        return (
          <div key={index} class="overflow-hidden rounded-xl shadow hover:shadow-lg transition-shadow duration-300">
            <Picture
              src={src}
              alt={`Gallery ${index + 1}`}
              width={800}
              height={600}
              class="w-full h-auto object-cover transform hover:scale-105 transition-transform duration-300"
              loading={index < 3 ? "eager" : "lazy"}
              fetchpriority={index < 3 ? "high" : "auto"}
            />
          </div>
        );
      })}
    </div>
  </section>
</Layout>
