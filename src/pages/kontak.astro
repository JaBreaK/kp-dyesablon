---
import Layout from "~/layouts/Layout.astro";
import Section from "~/components/Section.astro";
import Heading from "~/components/Heading.astro";
import FormContact from "~/components/forms/FormContact.astro";
---

<Layout
	pageTitle="Kontak - Grafika Printing Gemilang"
	description="Percetakan Kertas Profesional"
	>
  <Section class:list={"bg-gradient-to-b from-brand-green/10 to-white"}>
    <div class="max-w-3xl mx-auto text-center mb-12">
      <Heading>
        <h2 slot="heading-title" class="font-black text-brand-green text-4xl sm:text-5xl">
          Kontak
        </h2>
        <p slot="heading-content" class="text-gray-600 mt-4 text-lg sm:text-xl">
          Hubungi kami untuk pertanyaan atau informasi lebih lanjut.
        </p>
      </Heading>
    </div>

    <div class="max-w-2xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white shadow-md rounded-xl p-6 sm:p-8 space-y-6 border border-gray-100">
        <FormContact />
      </div>
    </div>
  </Section>
</Layout>
