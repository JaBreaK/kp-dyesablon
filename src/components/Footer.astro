---
const currentYear = new Date().getFullYear();
const footerLinks = [
  {
    title: 'Home',
    links: [
      { text: 'Home', url: '/' },
      { text: 'Kategori', url: '/kategori' },
      { text: 'Tentang Kami', url: '/tentangkami' }
    ]
  }
];
---

<footer class="bg-gray-900 text-white pt-16 pb-8">
  <div class="container-custom">
    <div class="grid md:grid-cols-2 lg:grid-cols-5 gap-8 mb-12">

      <!-- Logo + Deskripsi + Sosial -->
      <div class="md:col-span-2 lg:col-span-2">
        <a href="/login" target="_blank" class="flex items-center mb-6" aria-label="Go to homepage">
          <svg class="h-8 w-auto text-primary-400" viewBox="0 0 40 40" fill="currentColor">
            <path d="M20 5C11.716 5 5 11.716 5 20C5 28.284 11.716 35 20 35C28.284 35 35 28.284 35 20C35 11.716 28.284 5 20 5ZM20 10C22.761 10 25 12.239 25 15C25 17.761 22.761 20 20 20C17.239 20 15 17.761 15 15C15 12.239 17.239 10 20 10ZM20 32C16.218 32 12.848 30.154 10.859 27.307C12.839 24.663 16.159 23 20 23C23.841 23 27.161 24.663 29.141 27.307C27.152 30.154 23.782 32 20 32Z" />
          </svg>
          <span class="ml-2 text-xl font-display font-semibold text-white">Dye Apparel</span>
        </a>
        <p class="text-gray-400 mb-6 max-w-md">Gass Nyablon</p>
      </div>

      <!-- Kolom Link Dinamis -->
      {footerLinks.map(column => (
        <div key={column.title}>
          <h3 class="text-lg font-semibold mb-4">{column.title}</h3>
          <ul class="space-y-2">
            {column.links.map(link => (
              <li key={link.url}>
                <a href={link.url} class="text-gray-400 hover:text-primary-400 transition-colors">{link.text}</a>
              </li>
            ))}
          </ul>
        </div>
      ))}

      <!-- Kolom Alamat + Maps + Jam Buka -->
      {/* Kolom Alamat + Maps + Jam Buka */}
<div class="lg:col-span-2">
  <div class="md:flex md:space-x-6">
    {/* Alamat + Map */}
    <div class="md:w-1/2">
      <h3 class="text-lg font-semibold mb-4">Alamat</h3>
      <div class="w-full h-48 mb-4 rounded overflow-hidden shadow-lg">
        <iframe
          src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d5143.111209881772!2d106.47474034275197!3d-6.279450648498082!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x2e4207d7c7288865%3A0x3a73f60e5bca4d42!2sDye%20sablon%20Sodong%20-%20Tigaraksa!5e0!3m2!1sid!2ssg!4v1746155381675!5m2!1sid!2ssg"
          width="100%"
          height="100%"
          style="border:0;"
          allowFullScreen=""
          loading="lazy"
          referrerPolicy="no-referrer-when-downgrade"
          title="Lokasi Dye Sablorrr"
        />
      </div>
    </div>

    {/* Jam Buka */}
    <div class="md:w-1/2">
  <h3 class="text-lg font-semibold mb-4">Jam Buka</h3>
<ul class="text-gray-400 space-y-1 list-disc list-inside pl-4">
  <li>Senin&nbsp;–&nbsp;Jumat: 08:00&nbsp;–&nbsp;17:00</li>
  <li>Sabtu: 09:00&nbsp;–&nbsp;14:00</li>
</ul>

    </div>
  </div>
</div>


    </div>

    <div class="border-t border-gray-800 pt-8 mt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm mb-4 md:mb-0">&copy; {currentYear} jabreak. All rights reserved.</p>
        <div class="flex space-x-6">
          <a href="/privacy-policy" class="text-gray-400 hover:text-primary-400 text-sm transition-colors">Privacy Policy</a>
          <a href="/terms-conditions" class="text-gray-400 hover:text-primary-400 text-sm transition-colors">Terms of Service</a>
          <a href="#" class="text-gray-400 hover:text-primary-400 text-sm transition-colors">Cookie Policy</a>
        </div>
      </div>
    </div>
  </div>
</footer>
