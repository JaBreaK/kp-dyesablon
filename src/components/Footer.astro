---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    title: 'General',
    links: [
      { text: 'Home', url: '/' },
      { text: 'Kategori', url: '/kategori' },
      { text: 'Tentang Kami', url: '/tentangkami' },
    ],
  },
];

const footerLinks2 = [
  {
    title: 'Kategori',
    links: [
      { text: 'Sublimasi', url: '/kategori?category=sublimasi-jersey,sublimasi-batik,sublimasi-spanduk,sublimasi-lanyard' },
      { text: 'Sablon', url: '/kategori?category=sablon-jersey,sablon-kaos,sablon-dtf,sablon-plastisol,sablon-hoodie,sablon-kemeja,sablon-seragam,sablon-jaket,sablon-batik' },
      { text: 'Jahit', url: '/kategori?category=jahit-kaos,jahit-hoodie,jahit-kemeja,jahit-seragam,jahit-jaket,jahit-batik' },
    ],
  },
];
---

<footer class="bg-gray-900 text-white pt-16 pb-8">
  <div class="container-custom mx-auto px-4">
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5 gap-8 mb-12">

      <!-- Logo + Deskripsi -->
      <div>
        <a href="/login" target="_blank" class="flex items-center mb-6" aria-label="Go to homepage">
          <svg class="h-8 w-auto text-primary-400" viewBox="0 0 40 40" fill="currentColor">
            <path d="M20 5C11.716 5 5 11.716 5 20C5 28.284 11.716 35 20 35C28.284 35 35 28.284 35 20C35 11.716 28.284 5 20 5ZM20 10C22.761 10 25 12.239 25 15C25 17.761 22.761 20 20 20C17.239 20 15 17.761 15 15C15 12.239 17.239 10 20 10ZM20 32C16.218 32 12.848 30.154 10.859 27.307C12.839 24.663 16.159 23 20 23C23.841 23 27.161 24.663 29.141 27.307C27.152 30.154 23.782 32 20 32Z" />
          </svg>
          <span class="ml-2 text-xl font-display font-semibold">Dye Apparel</span>
        </a>
        <p class="text-gray-400 max-w-sm">Custom Tanpa Batas.</p>
      </div>

      <!-- General -->
      <div>
        <h3 class="text-lg font-semibold mb-4">General</h3>
        <ul class="space-y-2">
          {footerLinks[0].links.map(link => (
            <li key={link.url}>
              <a href={link.url} class="text-gray-400 hover:text-primary-400 transition-colors">
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Kategori -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Kategori</h3>
        <ul class="space-y-2">
          {footerLinks2[0].links.map(link => (
            <li key={link.url}>
              <a href={link.url} class="text-gray-400 hover:text-primary-400 transition-colors">
                {link.text}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Alamat -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Alamat</h3>
        <p class="flex items-start space-x-2 text-gray-400">
          <i class="bi bi-geo-alt-fill text-primary-400"></i>
          <span>
            Jl. Aria Wangsakara, Sodong,<br />
            Kec. Tigaraksa, Kab. Tangerang,<br />
            Banten 15720
          </span>
        </p>
      </div>

      <!-- Kontak & Jam -->
      <div>
        <h3 class="text-lg font-semibold mb-4">Kontak</h3>
        <ul class="space-y-3 text-gray-400">
          <li class="flex items-start space-x-2">
            <i class="bi bi-clock-fill text-primary-400"></i>
            <span>
              Senin–Jumat: 08:00–17:00<br />
              Sabtu: 09:00–14:00
            </span>
          </li>
          <li class="flex items-center space-x-2">
            <i class="bi bi-telephone-fill text-primary-400"></i>
            <span>6289601651641</span>
          </li>
          <li class="flex items-center space-x-2">
            <i class="bi bi-facebook text-primary-400"></i>
            <span>DyeApparelOfficial</span>
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="border-t border-gray-800 pt-8 mt-8">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-400 text-sm mb-4 md:mb-0">
          &copy; {currentYear} jabreak. All rights reserved.
        </p>
        <div class="flex space-x-6">
          <a href="/privacy-policy" class="text-gray-400 hover:text-primary-400 text-sm">Privacy Policy</a>
          <a href="/terms-conditions" class="text-gray-400 hover:text-primary-400 text-sm">Terms of Service</a>
          <a href="/#" class="text-gray-400 hover:text-primary-400 text-sm">Cookie Policy</a>
        </div>
      </div>
    </div>
  </div>
</footer>
