          (p) => `
        <tr class="hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors">
          <td class="px-4 py-3 text-gray-700 dark:text-gray-300">${p.title}</td>
          <td class="px-4 py-3">${p.categories.join(", ")}</td>
