---
// src/components/Materials.astro
import { supabase } from '../lib/supabase'

const { data: bahan, error } = await supabase
  .from('bahan') // pastikan nama tabelnya sesuai
  .select('*')

if (error) {
  console.error('Gagal ambil data bahan:', error.message)
}
---


<section id="materials" class="section">
  <div class="container-custom">
    <div class="text-center max-w-3xl mx-auto mb-16">
      <span class="inline-block px-4 py-1 rounded-full bg-secondary-100 dark:bg-secondary-900 text-secondary-600 dark:text-secondary-300 font-medium text-sm mb-4">
        Bahan
      </span>
      <h2 class="mb-6 text-gray-900 dark:text-white">Terbuat Dari Bahan Terbaik</h2>
    </div>
    
    <div class="grid md:grid-cols-3 gap-8">
      {bahan?.map((item, index) => (
        <div 
          class="card p-6 border border-gray-200 dark:border-gray-700 slide-up"
          style={{ animationDelay: `${index * 150}ms` }}
        >
          <img
            src={item.gambar}
            alt={item.nama}
            class="w-full h-40 object-cover rounded-lg mb-4"
            loading="lazy"
          />
          <h3 class="font-semibold text-lg text-gray-900 dark:text-white mb-2">
            {item.nama}
          </h3>
          <p class="text-gray-700 dark:text-gray-300 text-sm">
            {item.desk}
          </p>
        </div>
      ))}
    </div>
    
    <div class="mt-16 bg-linear-to-r from-primary-500 to-secondary-500 rounded-2xl p-8 md:p-12 relative overflow-hidden">
      <div class="absolute inset-0 bg-linear-to-r from-primary-600/30 to-secondary-600/30 backdrop-blur-xs"></div>
      <div class="relative z-10 text-center md:text-left md:flex items-center justify-between">
        <div class="mb-6 md:mb-0 md:mr-8">
          <h3 class="text-2xl md:text-3xl font-bold text-white mb-4">Siap Tingkatkan Kualitasmu?</h3>
          <p class="text-white/80 mb-4">Pilih bahan sesuai kebutuhanmu dan rasakan perbedaannya sekarang juga!</p>
        </div>
        <a href="/kategori" class="inline-flex items-center justify-center px-6 py-3 rounded-lg font-medium transition-all duration-300 focus:outline-hidden focus:ring-2 focus:ring-offset-2 bg-white text-primary-600 hover:bg-gray-100 focus:ring-white">
          Pilih Bahan
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </a>
      </div>
    </div>
    
  </div>
</section>
