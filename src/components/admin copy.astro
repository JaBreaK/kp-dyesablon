    @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
    @keyframes float { 0% { transform: translateY(0); } 50% { transform: translateY(-6px); } 100% { transform: translateY(0); } }
    @keyframes progressBar { from { width: 100%; } to { width: 0; } }
    .fade-in { animation: fadeIn 0.7s ease-out both; }
    .float { animation: float 4s ease-in-out infinite; }
    #toast-container {
      position: fixed;
      top: 50%; left: 50%; transform: translate(-50%, -50%);
      z-index: 9999;
      display: flex; flex-direction: column; gap: 0.75rem;
      pointer-events: none;
    }
    .toast-success { background: linear-gradient(135deg, #84fab0, #8fd3f4); }
    .toast-error { background: linear-gradient(135deg, #fc5c7d, #6a82fb); }
    .toast .progress {
      position: absolute; bottom: 0; left: 0; height: 4px;
      background: rgba(255,255,255,0.8);
      animation: progressBar 3s linear forwards;
    }
    /* Background Waves */
    .bg-waves {
      background: url('https://assets.codepen.io/3/wave-top.svg') no-repeat top center;
      background-size: cover;
    }
  </style>
</head>
