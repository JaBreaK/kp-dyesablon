---

<style>
  .masonry-item {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .masonry-item:hover {
    transform: translateY(-5px);
  }

  .image-wrapper::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(180deg, rgba(0,0,0,0) 60%, rgba(0,0,0,0.7) 100%);
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  .masonry-item:hover .image-wrapper::before {
    opacity: 1;
  }

  .title-overlay {
    transform: translateY(20px);
    opacity: 0;
    transition: all 0.3s ease;
  }

  .masonry-item:hover .title-overlay {
    transform: translateY(0);
    opacity: 1;
  }
  .columns-container {
    gap: 0.5rem !important; /* Jarak horizontal */
  }
</style>

<section class="relative overflow-hidden py-20 bg-white-50 dark:bg-white-900 px-4 sm:px-6 lg:px-8">


  <!-- Konten (taruh di bawah gradient dengan z-index lebih kecil) -->
  <div class="relative z-10 max-w-7xl mx-auto">
    <h2 class="text-4xl font-light text-center text-gray-800 dark:text-gray-100 mb-16">
      Elegant Collection
    </h2>

    <div class="columns-1 sm:columns-2 lg:columns-3 gap-4 space-y-4">
      {templates.map((item) => (
        <div class="masonry-item break-inside-avoid relative group">
          <div class="image-wrapper rounded-xl overflow-hidden shadow-lg hover:shadow-2xl relative mx-2">
            <img
              src={item.image}
              alt={item.title}
              class="w-full h-auto object-cover"
              loading="lazy"
              style="max-height: 300px;" 
            />
            <div class="title-overlay absolute bottom-0 left-0 right-0 p-4">
              <h3 class="text-white text-base font-medium tracking-wide">
                {item.title}
              </h3>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

